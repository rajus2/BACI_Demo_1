<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".RequestDetailsActivity">


    <TextView
        android:id="@+id/req_det_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp"
        android:text="Request Type:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/req_det_accNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/req_det_type"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:text="Account Number: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/req_det_req_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/req_det_accNum"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Description: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/req_det_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/req_det_req_desc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Status: "
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/declineBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Decline"
            android:textColor="#ffff" />


        <Button
            android:id="@+id/apprBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Approve"
            android:textColor="#ffff" />

    </LinearLayout>

</RelativeLayout>